@model InTravel.ViewModels.LoginModel



<main class="login-block" style="margin: 10% 30%;" > 
    <div class="text-center">
        
        <h1>Log In</h1>
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" >
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user ti-user"></i></span>
                    <input type="text" class="form-control" placeholder="Enter your email" asp-for="Email">
                </div>
            </div>

            <hr class="hr-xs">

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock ti-unlock"></i></span>
                    <input type="password" class="form-control" placeholder="Enter your password" asp-for="Password">
                </div>
            </div>

            <button class="btn btn-primary btn-block d-inline-block w-50" style="background-color: #0CC4EC" type="submit">Enter to website</button>

        </form>
    </div>
    
 
</main>