@model InTravel.ViewModels.RegisterModel
<main class="register-block" style="margin: 10% 30%;">
    <div class="text-center">
        <h1>Sign Up</h1>
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div>
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user ti-user"></i></span>
                            <input type="text" class="form-control" placeholder="Enter your email" asp-for="Email">
                        </div>
                    </div>
                    <span asp-validation-for="Email"></span>
                    <br/>
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user ti-user"></i></span>
                            <input type="text" class="form-control" placeholder="Enter your name" asp-for="Name">
                        </div>
                    </div>
                    <span asp-validation-for="Name"></span>
                    <br/>
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user ti-user"></i></span>
                            <input type="text" class="form-control" placeholder="Enter your surname" asp-for="Surname">
                        </div>
                    </div>
                    <span asp-validation-for="Surname"></span>
                    <br/>
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user ti-user"></i></span>
                            <input type="text" class="form-control" placeholder="Enter your phone" asp-for="Phone">
                        </div>
                    </div>
                    <span asp-validation-for="Phone"></span>
                    <br/>
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user ti-user"></i></span>
                            <input type="text" class="form-control" placeholder="Enter your password" asp-for="Password">
                        </div>
                    </div>
                    <span asp-validation-for="Password"></span>
                    <br/>
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user ti-user"></i></span>
                            <input type="text" class="form-control" placeholder="Confirm your password" asp-for="ConfirmPassword">
                        </div>
                    </div>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <br/>
                <div>
                    <input class="btn btn-primary btn-block d-inline-block w-50" style="background-color: #0CC4EC" type="submit" value="Sign Up"/>
                </div>
            </div>
        </form>
    </div>
</main>