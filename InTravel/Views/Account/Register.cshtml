@model InTravel.ViewModels.RegisterModel

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Email</label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
            <br />
            <label asp-for="Name">Name</label><br />
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
            <br />
            <label asp-for="Surname">Surname</label><br />
            <input asp-for="Surname" />
            <span asp-validation-for="Surname"></span>
            <br />
            <label asp-for="Phone">Phone</label><br />
            <input asp-for="Phone" />
            <span asp-validation-for="Phone"></span>
            <br />
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password"></span>
            <br />
            <label asp-for="ConfirmPassword">Confirm your password</label><br />
            <input asp-for="ConfirmPassword" type="password" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <input type="submit" value="Sign Up" />
        </div>
    </div>
</form>